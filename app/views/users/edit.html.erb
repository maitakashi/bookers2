<p id="notice"></p>
  <div class="profile-container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User Info</h2>
        <% if @user.errors.any? %>
        <%= @user.errors.count %>件のエラーが発生しました
        <% @user.errors.full_messages.each do |message| %>
        <%= message %>
        <% end %>
        <% end %>
        <%= form_with model:@user, local:true do |f| %>
        <label for="inputName">Name</label>
        <%= f.text_field :name, autofocus: true, id:"Name", placeholder:"名前"%></br>
        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%></br>
        <label for="Image">Image</label></br>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %></br>
        </br>
        <%= f.text_area :introduction, autofocus: true, id:"Introduction", placeholder:"自己紹介を入力してください"%></br>
        <%= f.submit "Update User" %>
        <% end %>
      </div>
    </div>
  </div>
